<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rathana.adapterdemo.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showListView"
        android:onClick="onShowListView"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showGridView"
        android:onClick="onShowGridView"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showRecyclerView"
        android:onClick="onShowRecyclerView"/>
</LinearLayout>
